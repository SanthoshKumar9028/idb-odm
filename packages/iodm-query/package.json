{
  "type": "module",
  "name": "iodm-query",
  "version": "0.0.3",
  "description": "Query wrapper for browser IndexedDB",
  "main": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "indexeddb"
  ],
  "author": "Santhoshkumar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SanthoshKumar9028/idb-odm"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "api:extractor": "api-extractor run --local --verbose",
    "api:documenter": "api-documenter markdown --input-folder temp --output-folder docs/pages",
    "build:docs": "npm run api:extractor && npm run api:documenter",
    "lint": "eslint .",
    "test": "vitest --coverage.enabled --coverage.reporter=text",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@microsoft/api-documenter": "^7.26.29",
    "@microsoft/api-extractor": "^7.52.8",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
}
